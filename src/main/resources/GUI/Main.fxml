                        <Label fx:id="droneCreatedLabel" text="Created" />
                     </children>
                  </VBox>
                  <Button fx:id="refreshButton" layoutX="510.0" layoutY="17.0" mnemonicParsing="false" onAction="#refresh" text="Refresh" />
